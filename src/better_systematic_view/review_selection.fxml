<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>

<?import better_systematic_view.Review?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="better_systematic_view.ReviewSelectionController">
   <children>
      <TableView fx:id="table" layoutX="150.0" layoutY="75.0" minHeight="200.0" minWidth="300.0" prefHeight="200.0" prefWidth="300.0">
        <columns>
          <TableColumn fx:id="nameCol" minWidth="100.0" prefWidth="100.0" text="Name">
              <cellValueFactory><PropertyValueFactory property="name" />
              </cellValueFactory>
          </TableColumn>
          <TableColumn fx:id="iDCol" minWidth="100.0" prefWidth="100.0" text="ID">
              <cellValueFactory><PropertyValueFactory property="id" />
              </cellValueFactory>
          </TableColumn>
            <TableColumn fx:id="loginCol" minWidth="100.0" prefWidth="100.0" text="Last Login">
                <cellValueFactory><PropertyValueFactory property="lastLogin" />
                </cellValueFactory>
            </TableColumn>
        </columns>
          <items>
              <FXCollections fx:factory="observableArrayList">
              </FXCollections>
          </items>
      </TableView>
      <Button layoutX="218.0" layoutY="306.0" minWidth="100.0" mnemonicParsing="false" text="Open Selected Review" />
      <HBox layoutX="150.0" layoutY="272.0" prefHeight="31.0" prefWidth="401.0">
         <children>
            <TextField fx:id="addName" minWidth="100.0" prefHeight="31.0" prefWidth="100.0" promptText="Name" />
            <TextField fx:id="addID" minWidth="100.0" prefHeight="31.0" prefWidth="100.0" promptText="ID" />
            <TextField fx:id="addLastLogin" minWidth="100.0" prefHeight="31.0" prefWidth="100.0" promptText="Last Login" />
            <Button mnemonicParsing="false" onAction="#handleAddReview" text="Add Review" />
         </children>
      </HBox>
   </children>
</AnchorPane>
